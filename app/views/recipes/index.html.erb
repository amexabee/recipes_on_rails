<div class="container">
  <ul class="list-group w-50 mx-auto">
  <%@recipes.each do |recipe| %>
    <li class='list-group-item border-0 m-2'>
      <div class="card">
        <div class="card-body d-flex justify-content-around">
          <div>
            <h3 class='p-0'><%=recipe.name.capitalize%></h3> 
            <button class='btn btn-danger mt-2'>Remove</button>
          </div>
          <div class='m-2'>
            <h5 class='mb-0'>Description for the Recipe:</h5> 
            <p><%=recipe.description%></p>
          </div>
        </div>
      </div>
    </li>
  <% end %>
  </ul>
</div>